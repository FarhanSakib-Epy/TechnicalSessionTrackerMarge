
@model EPYTST.API.Models.LogIn;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home Page";
}

<div>
    <div class="container d-flex align-items-center justify-content-center min-vh-100">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow border-0 rounded-4">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4 text-primary">Log In to EPY-TST</h3>

                    <form asp-action="Index" asp-controller="Home" method="post">
                        <!-- User Name input -->
                        <div class="form-outline mb-3">
                            <label asp-for="UserName" class="form-label">User Name</label>
                            <input name="UserName"  asp-for="UserName" class="form-control form-control-lg" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input name="Password" asp-for="Password" type="password" class="form-control form-control-lg" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Remember Me -->
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="RememberMe" />
                            <label class="form-check-label" for="RememberMe">Remember me</label>
                        </div>

                        <!-- Submit button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Log In</button>
                        </div>
                    </form>

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.ErrorMessage
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>




