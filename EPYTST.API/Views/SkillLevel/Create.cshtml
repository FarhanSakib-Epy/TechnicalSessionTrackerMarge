@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    var loginUrl = Configuration["ApiSettings:LoginUrl"];
}

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <div class="container mt-4">
        <h4>Add New SkillLevel</h4>
        <div class="mb-3">
            <label for="SkillLevelName" class="form-label">Skill Level Name</label>
            <input type="text" id="SkillLevelName" class="form-control" required />
        </div>
        <button class="btn btn-success" onclick="addSkillLevel()">Submit</button>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


<script>
    const baseUrl = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(loginUrl));
    function addSkillLevel() {
        var userCode = localStorage.getItem("userCode");

        const SkillLevel = {
            name: $("#SkillLevelName").val(),
            dateAdded: new Date().toISOString(),
            addedBy: userCode, // Replace with actual logged-in user ID
            isActive: true
        };

        $.ajax({
            url: `${baseUrl}api/SkillLevel/Add`,
            method: "POST",
            contentType: "application/json",
            data: JSON.stringify(SkillLevel),
            success: function (response) {
                alert("SkillLevel created successfully!");
                location.reload(); // Refresh list if needed
            },
            error: function (xhr) {
                console.error(xhr);
                alert("Error creating SkillLevel");
            }
        });
    }
</script>