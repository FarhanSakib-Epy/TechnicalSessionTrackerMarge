    <script>
        $(document).ready(function () {
               dashbordData();
            // debugger;
             var userName = localStorage.getItem("userName");
                 $("#userNameId").text(userName);
            var userJson = '@Html.Raw(ViewBag.User ?? "null")';
            if (userJson && userJson.trim() !== "") {
                var user = JSON.parse(userJson);
                if(user!=null){
                      localStorage.setItem("loggedInUser", JSON.stringify(user));
                      localStorage.setItem("userCode", user.UserCode);
                      localStorage.setItem("userName", user.Name);
                      localStorage.setItem("isAdmin", user.IsAdmin);

                      localStorage.setItem("designation", user.Designation);
                      localStorage.setItem("departmentName", user.DepartmentName);
                         
                }
                var userName = localStorage.getItem("userName");
                 $("#userNameId").text(userName);
                 $("#nameCell").text(userName);

                         debugger;
                         var designation = localStorage.getItem("designation");
                         $("#designationCell").text(designation);

                          var departmentName = localStorage.getItem("departmentName");
                          $("#departmentNameCell").text(departmentName);
                            
                 //var userCode = localStorage.getItem("userCode");
                 //$("#codeCell").text(userCode);
                    
                console.log("User stored in LocalStorage:", user);
            }

            debugger;
             var isAdmin = localStorage.getItem("isAdmin");

            //menu logic
            if (isAdmin == "true") {
            // Hide the Skill menu if NOT admin
            var skillMenu = document.getElementById("skillMenuForAdmin");
            if (skillMenu) {
              //  skillMenu.style.display = "none";
              $('#skillMenuForUser').hide();
            }
        }
        else{
               var skillMenu = document.getElementById("skillMenuForUser");
            if (skillMenu) {
                 $('#skillMenuForAdmin').hide();
                //skillMenu.style.display = "none";
            }
        }
        });

           var logOut = function() {
            debugger;
            localStorage.clear();
            window.location.href = '/Home/index';
        }


     var apiBaseUrl = '@ViewBag.logInUrl';
     var dashbordData = function(){
              debugger;
               $.ajax({
                      url: apiBaseUrl +"/api/SkillLevel/Get",
                   method: "GET",
                   success: function (data) {
                       if (Array.isArray(data)) {
                           let count = data.length;
                           console.log("Total Skill Levels:", count);
                           $("#totalSkillLevel").text(count);
                       } else {
                           console.error("Unexpected response format.");
                       }
                   },
                   error: function (xhr, status, error) {
                       console.error("Error fetching skill levels:", error);
                   }
               });

                  $.ajax({
                         url: apiBaseUrl +"/api/Skill/Get",
                      method: "GET",
                      success: function (data) {
                          if (Array.isArray(data)) {
                              let count = data.length;
                              console.log("Total Skill:", count);
                                 $("#totalSkill").text(count);
                          } else {
                              console.error("Unexpected response format.");
                          }
                      },
                      error: function (xhr, status, error) {
                          console.error("Error fetching skill levels:", error);
                      }
                  });
        }
    </script>

</body>
